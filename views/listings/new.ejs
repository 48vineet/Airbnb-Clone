<% layout("/layouts/boilerplate") -%>

    <div class="row">
        <div class="col-8 offset-2">
            <br><br>
            <h3>Create A New Listing</h3>
            <form action="/listings" method="post" novalidate class="needs-validation">

                <div class="mb-3">
                    <label for="title" class="form-label"></label>
                    <input name="listing[title]" placeholder="Enter title" class="form-control" required>

                    <div class="valid-feedback">
                        Title Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Enter The Title
                    </div>
                </div>


                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="valid-feedback">
                        Description Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Enter The Description
                    </div>
                </div>

                <div class="mb-3 ">
                    <label for="image" class="form-label">Image Link</label>
                    <input name="listing[image]" placeholder="Enter image URL/Link" type="text" class="form-control">
                </div>


                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input required name="listing[price]" placeholder="Enter price" class="form-control">
                        <div class="valid-feedback">
                            Price Entered Succesfull
                        </div>
                        <div class="invalid-feedback">
                            Please Give Price
                        </div>

                    </div>

                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input required name="listing[country]" class="form-control" placeholder="Enter country"
                            type="text">
                        <div class="valid-feedback">
                            Country Entered
                        </div>
                        <div class="invalid-feedback">
                            Invalid Country
                        </div>

                    </div>
                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input required name="listing[location]" placeholder="Enter location" type="text"
                        class="form-control">

                    <div class="valid-feedback">
                        Location Entered
                    </div>
                    <div class="invalid-feedback">
                        Invalid Location
                    </div>

                </div>

                <button class="btn btn-dark add-btn">Add</button>

                <br><br>
            </form>
        </div>
    </div>