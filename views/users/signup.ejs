<% layout("/layouts/boilerplate") -%>

    <div class="row mt-3">
        <h1 class="col-6 offset-3">Signup On WonderLust</h1>
        <div class="col-6 offset-3">
            <form action="/signup" method="POST" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="username" class="form-label"> Username</label>
                    <input name="username" id="username" placeholder="Enter username" class="form-control" required>

                    <div class="valid-feedback">
                        Username Looks Good!
                    </div>
                    <div class="invalid-feedback">
                        Enter The Username
                    </div>
                </div>


                <div class="mb-3">
                    <label for="email" class="form-label"> Email</label>
                    <input name="email" id="email" placeholder="Enter Email" class="form-control" required>
                    <div class="invalid-feedback">
                        Enter The Email
                    </div>
                </div>


                <div class="mb-3">
                    <label for="password" class="form-label"> Password</label>
                    <input name="password" id="password" placeholder="Enter Password" class="form-control" required
                        type="password">
                    <div class="invalid-feedback">
                        Enter The Password
                    </div>
                </div>
                <button class="btn btn-success"> Signup</button>
            </form>
        </div>


    </div>